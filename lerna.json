{
  "packages": [
    "blocks/*",
    "components/*"
  ],
  "version": "5.5.1",
  "ignoreChanges": [
    "**/node_modules/**",
    "**/package-lock.json"
  ],
  "workspaces": [
    "packages/*"
  ],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  }
}